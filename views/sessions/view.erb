<h1><%= @gymclass.name %></h1>
<form onsubmit="return confirm('Are you sure you wish to delete this class?')" action="/classes/<%= @gymclass.id %>/delete" method="post">
  <td><input type="submit" value="Delete"></td>
</form>
<form action="/classes/<%= @gymclass.id %>/update" method="post">
  <table>
    <tr>
      <td>Class name: </td>
      <td><input id="name" type="text" name="name" value="<%= @gymclass.name%>" required></td>
    </tr>
    <tr>
      <td>Description: </td>
      <td><input id="description" type="text" name="description" value="<%= @gymclass.description%>" required></td>
    </tr>
    <tr>
      <td><input type="submit" value="Update"></td>
    </tr>
  </table>
</form>
