<h1>List of class sessions</h1>
<h2><a href="/new/session">Add a new session</a></h2>
<hr>
<table>
<% @sessions.each do |session|%>
  <tr>
    <td>Date</td>
    <td><%= session.session_date %></td>
  </tr>
  <tr>
    <td>Start time</td>
    <td><a href="/sessions/<%=session.id%>"><%= session.nice_time %></a></td>
  </tr>
  <tr>
    <td>Class</td>
    <td><%= session.return_class['name'] %></td>
  </tr>
  <tr>
    <td>Instructor</td>
    <td><%= session.instructor %></td>
  </tr>
  <tr>
    <td>Duration (min)</td>
    <td><%= session.duration %></td>
  </tr>
  <tr>
    <td>Location</td>
    <td><%= session.location %></td>
  </tr>
  <tr>
    <td><a href="/sessions/<%=session.id%>/signup">Bookings</a></td>
    <td><%= session.count_bookings%> of <%= session.capacity %></td>
  </tr>
  <tr>
    <td><hr></td>
  </tr>
<% end %>
</table>
