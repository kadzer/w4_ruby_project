<h1><%= @gymclass.name %></h1>
<form onsubmit="return confirm('Are you sure you wish to delete this class?')" action="/classes/<%= @gymclass.id %>/delete" method="post">
  <td><input type="submit" value="Delete"></td>
</form>
<form action="/classes/<%= @gymclass.id %>/update" method="post">
  <table>
    <tr>
      <td>Class name: </td>
      <td><input id="name" type="text" name="name" value="<%= @gymclass.name%>" required></td>
    </tr>
    <tr>
      <td>Instructor: </td>
      <td><input id="instructor" type="text" name="instructor" value="<%= @gymclass.instructor%>" required></td>
    </tr>
    <tr>
      <td>Description: </td>
      <td><textarea name="description" rows="10" cols="30" value="<%= @gymclass.description%>" required><%= @gymclass.description%></textarea></td>
    </tr>
    <tr>
      <td><input type="submit" value="Update"></td>
    </tr>
  </table>
</form>
